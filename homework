       	<a-camera wasd-controls look-controls>
                 <a-cursor color="yellow"></a-cursor>
       	</a-camera>
       </a-entity>
    

      
      
      <a-box onclick="alertUser(this);" position="-2 3 -5" rotation="0 45 0" color="#4CC3D9" shadow>
      
            <a-box position="1 1 1" rotation="0 45 0" color="yellow" shadow></a-box>

      </a-box>
      
      
      
